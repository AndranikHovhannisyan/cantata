    <div ng-app="Cantata" ng-controller="MainController">
        <div class="opt">
            <a href="" 
                class="glyphicon glyphicon-certificate rmAll"
                data-animation="am-fade-and-slide-top" 
                data-template="/bundles/cantatamain/htmls/reAll.html"
                title="removeAll"
                bs-modal>
            </a>
            <a href="" 
                class="glyphicon glyphicon-remove rmAll"
                data-animation="am-fade-and-slide-top" 
                data-template="/bundles/cantatamain/htmls/rmAll.html"
                title="removeAll"
                bs-modal>
            </a>
        </div>
        <table class="table table-striped table2">
            <thead>
                <tr>
                    <th><input type="checkbox" ng-model="checkAll"/></th>
