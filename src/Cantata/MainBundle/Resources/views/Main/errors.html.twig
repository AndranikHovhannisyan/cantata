                    <th>test</th>
                    <th>test</th>
                    <th>test</th>
                    <th>test</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in items">
                    <td><input type="checkbox" ng-model="checkboxes[item.id]"/></td>
                    <td>{{ item.code }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.is_prixod }}</td>
                    <td>{{ item.month }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.shop }}</td>
                    <td>{{ item.year }}</td>
                    <td>
                        <a href=""
                            ng-if="item.type == 1"
                            data-animation="am-fade-and-slide-top" 
                            data-template="/bundles/cantatamain/htmls/modal1.html"
                            class="glyphicon glyphicon-certificate"
                            title="change"
                            bs-modal>
                        </a>
                        <a href=""
                            ng-if="item.type == 0"
                            data-animation="am-fade-and-slide-top" 
                            data-template="/bundles/cantatamain/htmls/modal2.html"
                            class="glyphicon glyphicon-certificate"
                            title="change"
                            bs-modal>
                        </a>
                    </td>
                    <td>
                        <a href="" 
                            class="glyphicon glyphicon-remove"
                            data-animation="am-fade-and-slide-top" 
                            data-template="/bundles/cantatamain/htmls/rm.html"
                            title="remove"
                            bs-modal>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    {% endverbatim %}
{% endblock %}